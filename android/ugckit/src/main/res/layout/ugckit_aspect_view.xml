<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_aspect_show"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_aspect"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/menu_ic_ratio_16_9" />

        <ImageView
            android:id="@+id/iv_aspect_mask"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ugckit_record_round_bg"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_aspect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_aspect"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins"
            android:gravity="center_horizontal"
            android:shadowColor="@color/ugckit_color_gray4"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="4"
            android:text="Rasio"
            android:textColor="@color/ugckit_white"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_aspect_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/layout_aspect_show"
        android:background="@drawable/ugckit_drawable_gray_rect_bg"
        android:paddingVertical="8dp"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/iv_aspect_first"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/ugckit_aspect_divider"
            android:layout_marginRight="@dimen/ugckit_aspect_divider"
            android:src="@drawable/menu_ic_ratio_1_1" />

        <ImageView
            android:id="@+id/iv_aspect_second"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="@dimen/ugckit_aspect_divider"
            android:layout_toRightOf="@id/iv_aspect_first"
            android:src="@drawable/menu_ic_ratio_3_4" />

        <ImageView
            android:id="@+id/iv_aspect_third"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="@dimen/ugckit_aspect_divider"
            android:layout_toRightOf="@id/iv_aspect_second"
            android:src="@drawable/menu_ic_ratio_16_9" />

        <ImageView
            android:id="@+id/iv_aspect_fourth"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="@dimen/ugckit_aspect_divider"
            android:layout_toRightOf="@id/iv_aspect_third"
            android:src="@drawable/menu_ic_ratio_9_16" />

        <ImageView
            android:id="@+id/iv_aspect_fifth"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="@dimen/ugckit_aspect_divider"
            android:layout_toRightOf="@id/iv_aspect_fourth"
            android:src="@drawable/menu_ic_ratio_4_3" />
    </RelativeLayout>
</RelativeLayout>